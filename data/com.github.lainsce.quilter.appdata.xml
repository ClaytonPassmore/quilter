<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
    <id>com.github.lainsce.quilter.desktop</id>
    <metadata_license>CC0</metadata_license>
    <project_license>GPL-3.0+</project_license>
    <name>Quilter</name>
    <summary>Focus on your writing</summary>
    <description>
        <p>Focus on your writing and write beautiful solid stories with the Focus Mode in tow in this Markdown editor</p>
        <ul>
            <li>Save your documents anywhere, even on existing files.</li>
            <li>Preview your story in the Preview Mode.</li>
            <li>Configure whether to have Focus Mode or not.</li>
            <li>Configure whether to have Dark Mode or not.</li>
            <li>Fullscreen your writing area with F11.</li>
            <li>Quit anytime with the shortcut Ctrl + Q</li>
        </ul>
    </description>
    <provides>
        <binary>com.github.lainsce.quilter</binary>
    </provides>
    <developer_name>Lains</developer_name>
    <url type="homepage">https://github.com/lainsce/quilter/</url>
    <url type="bugtracker">https://github.com/lainsce/quilter/issues</url>
    <releases>
        <release version="1.3.7" date="2017-10-09">
           <description>
               <p>Release: Small Fixes</p>
               <ul>
                   <li>Only small fixes in the app to have consistent design.</li>
               </ul>
           </description>
        </release>
        <release version="1.3.6" date="2017-10-08">
           <description>
               <p>Release: When in Doubt, Hide your Status</p>
               <ul>
                   <li>Added a switch on the Preferences to show or hide the Statusbar in the current session</li>
               </ul>
           </description>
        </release>
        <release version="1.3.5" date="2017-10-01">
            <description>
                <p>Release: Focus pocus!</p>
                <ul>
                    <li>The Focus Mode now has a better way of showing focus on the text</li>
                </ul>
            </description>
        </release>
        <release version="1.3.4" date="2017-10-01">
            <description>
                <p>Release: Count Your Words</p>
                <ul>
                    <li>Now you can see on the statusbar in-app how many words you have written</li>
                </ul>
            </description>
        </release>
        <release version="1.3.3" date="2017-10-01">
            <description>
                <p>Release: Small Style Fixes</p>
                <ul>
                    <li>Small styling fixes all around</li>
                </ul>
            </description>
        </release>
        <release version="1.3.2" date="2017-09-30">
            <description>
                <p>Release: Correct &amp; Undo/Redo All You Want</p>
                <ul>
                    <li>Undoing and Redoing now work properly</li>
                    <li>You can now set spellchecking as enabled or not in the Settings</li>
                </ul>
            </description>
        </release>
        <release version="1.3.1" date="2017-09-29">
            <description>
                <p>Release: Now Make It Fly</p>
                <ul>
                    <li>Small fixes all around to make Quilter work better</li>
                    <li>You can now make Markdown Tables with style</li>
