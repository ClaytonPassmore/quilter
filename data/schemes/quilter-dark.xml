<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="quilter-dark" _name="Quilter Dark" version="1.0">
  <author>Lains</author>
  <_description>Emphasis on focus.</_description>

  <style name="text"            foreground="#ABACAE" background="#363B3E"/>
  <style name="cursor"          foreground="#64BAFF"/>
  <style name="current-line"    background="#4D4D4D"/>
  <style name="selection"       foreground="#FAFAFA" background="#64BAFF"/>

  <!-- Bold -->
  <style name="def:statement" foreground="#FAFAFA"  bold="true"/>

  <!-- Italic -->
  <style name="def:doc-comment-element" foreground="#D4D4D4" italic="true"/>

  <!-- Links -->
  <style name="def:comment" foreground="#64BAFF"/>
  <style name="def:underlined" foreground="#64BAFF"/>

  <!-- Code -->
  <style name="def:identifier" foreground="#7E8087"/>

  <!-- Line-break -->
  <style name="def:note" foreground="#FAFAFA"/>

  <!-- Label -->
  <style name="def:preprocessor" foreground="#ABACAE"/>

  <!-- Image marking in Links -->
  <style name="def:shebang" foreground="#64BAFF"/>
  <style name="def:constant" foreground="#64BAFF"/>

  <!-- Backslash Escaping -->
  <style name="def:special-char" foreground="#7E8087"/>

  <!-- Headers -->
  <style name="def:type" foreground="#FAFAFA" bold="true"/>
</style-scheme>
