<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="quilter" _name="Quilter" version="1.0">
  <author>Lains</author>
  <_description>Emphasis on focus.</_description>

  <style name="text"            foreground="#1A1A1A" background="#F1F1F1"/>
  <style name="cursor"          foreground="#00BAFF"/>
  <style name="current-line"    background="#E1E1E1"/>
  <style name="selection"       foreground="#F1F1F1" background="#00BAFF"/>

  <!-- Bold -->
  <style name="def:statement" foreground="#1A1A1A"  bold="true"/>

  <!-- Italic -->
  <style name="def:doc-comment-element" foreground="#4A4A4A" italic="true"/>

  <!-- Links -->
  <style name="def:comment" foreground="#00BAFF"/>
  <style name="def:underlined" foreground="#00BAFF"/>

  <!-- Code -->
  <style name="def:identifier" foreground="#6A6A6A"/>

  <!-- Line-break -->
  <style name="def:note" foreground="#1A1A1A"/>

  <!-- Label -->
  <style name="def:preprocessor" foreground="#1A1A1A"/>

  <!-- Image marking in Links -->
  <style name="def:shebang" foreground="#00BAFF"/>
  <style name="def:constant" foreground="#00BAFF"/>

  <!-- Backslash Escaping -->
  <style name="def:special-char" foreground="#6A6A6A"/>

  <!-- Headers -->
  <style name="def:type" foreground="#1A1A1A" bold="true"/>
</style-scheme>
