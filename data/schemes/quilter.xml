<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="quilter" _name="Quilter" version="1.0">
  <author>Lains</author>
  <_description>Emphasis on focus.</_description>

  <style name="text"            foreground="#1A1A1A" background="#FAFAFA"/>
  <style name="cursor"          foreground="#3689E6"/>
  <style name="current-line"    background="#D4D4D4"/>
  <style name="selection"       foreground="#FAFAFA" background="#3689E6"/>

  <!-- Bold -->
  <style name="def:statement" foreground="#1A1A1A"  bold="true"/>

  <!-- Italic -->
  <style name="def:doc-comment-element" foreground="#4D4D4D" italic="true"/>

  <!-- Links -->
  <style name="def:comment" foreground="#3689E6"/>
  <style name="def:underlined" foreground="#3689E6"/>

  <!-- Code -->
  <style name="def:identifier" foreground="#666"/>

  <!-- Line-break -->
  <style name="def:note" foreground="#1A1A1A"/>

  <!-- Label -->
  <style name="def:preprocessor" foreground="#1A1A1A"/>

  <!-- Image marking in Links -->
  <style name="def:shebang" foreground="#3689E6"/>
  <style name="def:constant" foreground="#3689E6"/>

  <!-- Backslash Escaping -->
  <style name="def:special-char" foreground="#666"/>

  <!-- Headers -->
  <style name="def:type" foreground="#1A1A1A" bold="true"/>
</style-scheme>
